<view><input type="text" data-event-opts="{{[['input',[['__set_model',['','tel','$event',[]]]]]]}}" value="{{tel}}" bindinput="__e"/><text class="{{[tel.length!==11?'error':'success']}}">{{teltip}}</text><input type="text" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/><text class="{{[password.length<6?'error':'success']}}">{{passwordtip}}</text><button disabled="{{tel.length!==11||password.length<6}}" type="{{tel.length===11&&password.length>=6?'warn':'default'}}" data-event-opts="{{[['tap',[['login',['$event']]]]]}}" bindtap="__e">登录</button></view>